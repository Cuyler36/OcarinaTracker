<Application x:Class="OcarinaTracker.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OcarinaTracker.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type local:EditorGroupPanel}">
            <Style.Resources>
                <Style TargetType="{x:Type local:CollectableEditor}">
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>
        
        <Style TargetType="{x:Type local:DungeonGroupEditorPanel}">
            <Style.Resources>
                <Style TargetType="{x:Type local:DungeonEditor}">
                    <!--<Setter Property="Margin" Value="5"/>-->
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
